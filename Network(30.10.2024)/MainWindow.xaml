<Window x:Class="PacketNetworkSimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Эмулятор сетевых пакетов" Height="600" Width="800">
    <Grid>
        <Canvas Name="NetworkCanvas" Background="LightGray" Margin="162,10,0,0"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Button Content="Запустить симуляцию" Click="StartSimulation_Click" Width="120"/>
            <Button Content="Остановить симуляцию" Click="StopSimulation_Click" Width="120" Margin="0,5,0,0"/>
            <Button Content="Добавить узел" Click="AddNode_Click" Width="120" Margin="0,5,0,0"/>
            <Button Content="Удалить узел" Click="RemoveNode_Click" Width="120" Margin="0,5,0,0"/>
            <Button Content="Добавить соединение" Click="AddConnection_Click" Width="120" Margin="0,5,0,0"/>
            <Button Content="Удалить соединение" Click="RemoveConnection_Click" Width="120" Margin="0,5,0,0"/>
        </StackPanel>
        <TextBlock Name="StatusText" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
    </Grid>
</Window>
